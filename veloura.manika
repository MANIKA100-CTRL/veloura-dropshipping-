<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Veloura Dropshipping</title>
  <meta name="description" content="Veloura Dropshipping - Your trusted source for trendy, high-quality dropshipping products with fast delivery and excellent customer service." />
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    body { background: #f9f9f9; color: #333; line-height: 1.6; }
    header { background-color: #5a2d82; color: #fff; padding: 20px 0; text-align: center; position: relative; }
    header h1 { font-size: 2.5rem; letter-spacing: 2px; }
    nav { margin-top: 10px; }
    nav a { color: #fff; margin: 0 15px; text-decoration: none; font-weight: 600; transition: color 0.3s ease; }
    nav a:hover { color: #ffc107; }
    .cart-btn { position: absolute; top: 20px; right: 20px; background: #ffc107; color: #000; padding: 8px 12px; border-radius: 5px; cursor: pointer; font-weight: bold; }
    .cart-count { background: red; color: #fff; border-radius: 50%; padding: 2px 6px; font-size: 0.8rem; margin-left: 5px; }
    .hero { background: url('https://images.unsplash.com/photo-1513708928674-3f8b3285bf4a?auto=format&fit=crop&w=1470&q=80') no-repeat center center/cover; height: 400px; display: flex; flex-direction: column; align-items: center; justify-content: center; color: #fff; text-shadow: 2px 2px 8px #000; font-size: 2rem; font-weight: bold; text-align: center; padding: 0 20px; }
    .hero a { margin-top: 15px; background: #ffc107; color: #000; padding: 10px 20px; border-radius: 5px; text-decoration: none; font-weight: bold; transition: background 0.3s ease; }
    .hero a:hover { background: #ff9800; }
    .container { max-width: 1100px; margin: 40px auto; padding: 0 20px; }
    section h2 { font-size: 2rem; margin-bottom: 20px; color: #5a2d82; border-bottom: 3px solid #5a2d82; display: inline-block; padding-bottom: 5px; }
    .products { display: flex; gap: 20px; flex-wrap: wrap; justify-content: center; }
    .product-card { background: #fff; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border-radius: 8px; width: 260px; overflow: hidden; transition: transform 0.3s ease; cursor: pointer; }
    .product-card:hover { transform: translateY(-10px); box-shadow: 0 8px 20px rgba(0,0,0,0.15); }
    .product-card img { width: 100%; height: 180px; object-fit: cover; }
    .product-info { padding: 15px; text-align: center; }
    .product-info h3 { font-size: 1.2rem; margin-bottom: 10px; color: #333; }
    .product-info p { font-size: 0.9rem; color: #666; margin-bottom: 15px; }
    .product-info .price { font-weight: 700; color: #5a2d82; font-size: 1.1rem; margin-bottom: 10px; }
    .buy-btn { display: inline-block; padding: 8px 15px; background: #5a2d82; color: #fff; border-radius: 5px; text-decoration: none; font-weight: bold; transition: background 0.3s ease; }
    .buy-btn:hover { background: #452065; }
    .about, .contact { background: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); margin-bottom: 40px; }
    .contact { background: #5a2d82; color: #fff; text-align: center; }
    .contact a { color: #ffc107; text-decoration: none; }
    footer { text-align: center; padding: 15px 0; background: #3e1f55; color: #ccc; font-size: 0.9rem; margin-top: 40px; }
    /* Cart Popup */
    .cart-popup { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: #fff; padding: 20px; width: 300px; border-radius: 8px; box-shadow: 0 5px 15px rgba(0,0,0,0.3); z-index: 1000; }
    .cart-popup h3 { margin-bottom: 15px; }
    .cart-item { display: flex; justify-content: space-between; margin-bottom: 10px; font-size: 0.9rem; }
    .remove-btn { color: red; cursor: pointer; font-size: 0.8rem; }
    .close-cart { margin-top: 10px; background: #5a2d82; color: #fff; padding: 8px; border: none; width: 100%; border-radius: 5px; cursor: pointer; }
    .overlay { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 900; }
    @media(max-width: 768px) { .products { flex-direction: column; align-items: center; } .product-card { width: 90%; } .hero { font-size: 1.5rem; padding: 0 10px; } }
  </style>
</head>
<body>

  <header>
    <h1>Veloura Dropshipping</h1>
    <nav>
      <a href="#products">Products</a>
      <a href="#about">About Us</a>
      <a href="#contact">Contact</a>
    </nav>
    <div class="cart-btn">Cart <span class="cart-count">0</span></div>
  </header>

  <div class="hero">
    Your Trusted Source for Trendy Dropshipping Products
    <a href="#products">Shop Now</a>
  </div>

  <div class="container">
    <section id="products">
      <h2>Featured Products</h2>
      <div class="products">
        <div class="product-card" data-name="Smart Watch" data-price="39.99">
          <img src="https://images.unsplash.com/photo-1503602642458-232111445657?auto=format&fit=crop&w=600&q=80" alt="Smart Watch" loading="lazy" />
          <div class="product-info">
            <h3>Smart Watch</h3>
            <p>Stay connected with this sleek and stylish smartwatch.</p>
            <div class="price">$39.99</div>
            <a href="#" class="buy-btn">Buy Now</a>
          </div>
        </div>
        <div class="product-card" data-name="Wireless Earbuds" data-price="25.99">
          <img src="https://images.unsplash.com/photo-1512499617640-c2f9995f2630?auto=format&fit=crop&w=600&q=80" alt="Wireless Earbuds" loading="lazy" />
          <div class="product-info">
            <h3>Wireless Earbuds</h3>
            <p>Enjoy your music on the go with crystal-clear sound.</p>
            <div class="price">$25.99</div>
            <a href="#" class="buy-btn">Buy Now</a>
          </div>
        </div>
        <div class="product-card" data-name="Portable Charger" data-price="19.99">
          <img src="https://images.unsplash.com/photo-1494526585095-c41746248156?auto=format&fit=crop&w=600&q=80" alt="Portable Charger" loading="lazy" />
          <div class="product-info">
            <h3>Portable Charger</h3>
            <p>Keep your devices powered anywhere, anytime.</p>
            <div class="price">$19.99</div>
            <a href="#" class="buy-btn">Buy Now</a>
          </div>
        </div>
      </div>
    </section>

    <section id="about" class="about">
      <h2>About Veloura</h2>
      <p>Veloura is your reliable partner in dropshipping, providing quality products that meet the latest trends.</p>
    </section>

    <section id="contact" class="contact">
      <h2>Contact Us</h2>
      <p>Email: <a href="mailto:support@veloura.com">support@veloura.com</a></p>
      <p>Phone: <a href="tel:+919876543210">+91 98765 43210</a></p>
    </section>
  </div>

  <footer>
    &copy; 2025 Veloura Dropshipping. All rights reserved.
  </footer>

  <!-- Cart Popup -->
  <div class="overlay"></div>
  <div class="cart-popup">
    <h3>Your Cart</h3>
    <div id="cart-items"></div>
    <button class="close-cart">Close</button>
  </div>

  <script>
    const cartBtn = document.querySelector('.cart-btn');
    const cartCount = document.querySelector('.cart-count');
    const overlay = document.querySelector('.overlay');
    const cartPopup = document.querySelector('.cart-popup');
    const closeCartBtn = document.querySelector('.close-cart');
    const cartItemsContainer = document.getElementById('cart-items');
    let cart = [];

    document.querySelectorAll('.buy-btn').forEach(btn => {
      btn.addEventListener('click', e => {
        e.preventDefault();
        const productCard = e.target.closest('.product-card');
        const name = productCard.getAttribute('data-name');
        const price = parseFloat(productCard.getAttribute('data-price'));
        cart.push({ name, price });
        updateCart();
      });
    });

    cartBtn.addEventListener('click', () => {
      overlay.style.display = 'block';
      cartPopup.style.display = 'block';
    });

    closeCartBtn.addEventListener('click', () => {
      overlay.style.display = 'none';
      cartPopup.style.display = 'none';
    });

    overlay.addEventListener('click', () => {
      overlay.style.display = 'none';
      cartPopup.style.display = 'none';
    });

    function updateCart() {
      cartCount.textContent = cart.length;
      cartItemsContainer.innerHTML = '';
      cart.forEach((item, index) => {
        const div = document.createElement('div');
        div.classList.add('cart-item');
        div.innerHTML = `${item.name} - $${item.price.toFixed(2)} <span class="remove-btn" data-index="${index}">x</span>`;
        cartItemsContainer.appendChild(div);
      });

      document.querySelectorAll('.remove-btn').forEach(btn => {
        btn.addEventListener('click', e => {
          const index = e.target.getAttribute('data-index');
          cart.splice(index, 1);
          updateCart();
        });
      });
    }
  </script>

</body>
</html>
